# 监控配置
MONITOR_ENABLED=true
MONITOR_INTERVAL=5000

# 数据库配置（可选，用于持久化存储）
DB_TYPE=sqlite
DB_PATH=data/notebot.db

# 集群配置（多实例部署）
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0
CLUSTER_REDIS_KEY=notebot:cluster