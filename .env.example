# 服务配置
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=notebot:

# Onebot 配置
ONEBOT_ACCESS_TOKEN=your-access-token
ONEBOT_SECRET=your-secret
ONEBOT_WS_PORT=8080
ONEBOT_HTTP_PORT=5700

# 安全配置
JWT_SECRET=d9fP4sH6S5uUoCUl
ADMIN_USERNAME=admin
